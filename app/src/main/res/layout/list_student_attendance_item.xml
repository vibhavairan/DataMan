<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/item_bg_dark"
    android:orientation="vertical">
    <TextView
        android:id="@+id/subject_name_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBackgroundLight"
        android:gravity="center"
        android:text="@string/nullre"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/classes_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorBackgroundLight"
        android:padding="10dp"
        android:text="@string/nullre"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/percentage_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nullre"
        android:gravity="center"
        android:textColor="@color/colorBackgroundLight"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>