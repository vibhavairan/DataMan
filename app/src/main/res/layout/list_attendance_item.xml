<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@drawable/item_bg_dark">

    <ImageView
        android:id="@+id/imageStudent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/tempimage" />

    <TextView
        android:id="@+id/nameStudent"
        android:textColor="@color/colorBackgroundLight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:gravity="start"
        android:padding="10dp"
        android:text="@string/nullre"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:textColor="@color/colorBackgroundLight"
        android:id="@+id/rg_attendance"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <RadioButton
            android:id="@+id/p_radio"
            android:textColor="@color/colorBackgroundLight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="P" />

        <RadioButton
            android:id="@+id/a_radio"
            android:layout_width="50dp"
            android:textColor="@color/colorBackgroundLight"
            android:layout_height="50dp"
            android:checked="true"
            android:text="A" />

    </RadioGroup>


</RelativeLayout>